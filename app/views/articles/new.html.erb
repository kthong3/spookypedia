<h1>Create a new article!</h2>

<% if @errors %>
<ul class='errors'>
  <% @errors.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
<% end %>

<%= form_for :article, url: articles_path do |form| %>

  <select name="new_article_category" id="new_article_category">
    <% @categories.each do |category| %>
      <option value=<%= category.name %>><%= category.name %></option>
    <% end %>
  <select>

  <%= form.select :test_category, options_for_select(@categories) %>

  <p>
    <%= form.label :title %></br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :body %></br>
    <%= form.text_area :body %>
  </p>

  <p>
    <%= form.submit value="Submit" %>
  </p>
<% end %>
