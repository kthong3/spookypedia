<%= javascript_include_tag Ckeditor.cdn_url %>

<% if logged_in? && authorized?(@user) %>
  <%= form_for @user, html: {multipart: true} do |f|  %>
   <p>
     <%= f.label :image %><br>
     <%= f.cktext_area :profile_pic_url, ckeditor: { language: 'en' } %>
   </p>
   <p>
     <%= f.submit "Save Picture" %>
   </p>
  <% end %>
<% end %>
