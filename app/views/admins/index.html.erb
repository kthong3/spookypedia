<div class="page-container">
<h2>Admin Portal</h2>

<div class="flagged-articles">
  <h3>Flagged Articles</h3>
  <ul>
  <% @articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
  </ul>
</div>

<div class="flagged-comments">
  <h3>Flagged Comments</h3>
  <ul>
  <% @comments.each do |comment| %>
    <li><%= link_to comment.body.html_safe, article_path(comment.article) %></li>
  <% end %>
  </ul>
</div>

<div class="current-admins">
  <h3>Current Admins</h3>
  <ul>
  <% @admins.each do |admin| %>
    <li><%= link_to admin.username, user_path(admin) %></li>
  <% end %>
  </ul>
</div>

<div class="appoint-admin">
  <h3>Appoint New Admin</h3>
  <%= form_for @user, url: user_admins_path, method: :post do |user| %>
    <%= user.select :id, options_for_select(@user_array) %>
    <%= user.submit value="Appoint" %>
  <% end %>
</div>
</div>