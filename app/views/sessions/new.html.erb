<div class="page-container">
<div class="user-views">
<h1>Login</h1>

<% if @error %>
<span class='errors'>Your email and password don't match!</span>
<% end %>

<%= form_for :user, url: sessions_path do |user| %>
  <p>
    <%= user.label :email %></br>
    <%= user.text_field :email %>
  </p>

  <p>
    <%= user.label :password %></br>
    <%= user.password_field :password %>
  </p>

  <p>
    <%= user.submit value="Login" %>
  </p>
<% end %>
</div>
</div>