<div class="col-2-3 category-box">
  <h2><%= link_to category.name, category %></h2><br>

  <% category.sample_articles.each do |article| %>
      <div class="article-preview-container">
        <span class="col-2-3 category-article-title"><%= link_to article.title, article %></span>
        <span class="col-2-3 category-article-preview">contributed by <%= article.author.username %> | <%= article.comments.count %> | <%=time_ago_in_words(article.created_at) %> ago
        </span>
      </div>
  <% end %>
</div>
