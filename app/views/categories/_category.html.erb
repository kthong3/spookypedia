<div class="col-2-3 category-box">
  <h2><%= link_to category.name, category %></h2>

  <% category.sample_articles.each do |article| %>
      <div class="article-preview-container">
        <p class="category-article-title"><%= link_to article.title.html_safe, article %></p>
        <p class=" category-article-preview">contributed by <%= article.author.username %> | <%= article.comments.count %> | <%=time_ago_in_words(article.created_at) %> ago
        </p>
      </div>
  <% end %>
</div>


