<h1>Create A New Category</h1>

<p class="notice"><b><%= notice %></b></p>

<% if @errors %>
<ul class='errors'>
  <% @errors.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
<% end %>

  <%= form_for :category, url: categories_path do |category| %>
    <p>
      <%= category.label :name %></br>
      <%= category.text_field :name %>
    </p>

    <p>
      <%= category.submit value="Create!" %>
    </p>
  <% end %>